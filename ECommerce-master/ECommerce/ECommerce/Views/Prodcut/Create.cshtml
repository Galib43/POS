                </select>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Links, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Links, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Links)
