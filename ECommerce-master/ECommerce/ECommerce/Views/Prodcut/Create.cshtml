        </div>

      

        <div class="form-group">
            @Html.LabelFor(model => model.RegularPrice, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.RegularPrice, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RegularPrice)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OfferPrice, new { @class = "control-label col-md-2" })
